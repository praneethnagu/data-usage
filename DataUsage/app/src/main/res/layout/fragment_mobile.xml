<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.iiitb.datausage.Fragments.MobileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/mobilePieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data Transmitted"
            android:textColor="#372c24"
            android:id="@+id/tx"
            android:layout_below="@+id/mobilePieChart"
            android:layout_alignLeft="@+id/mobilePieChart"
            android:layout_alignStart="@+id/mobilePieChart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data Received"
            android:textColor="#372c24"
            android:id="@+id/rx"
            android:layout_below="@+id/mobilePieChart"
            android:layout_alignRight="@+id/mobilePieChart"
            android:layout_alignEnd="@+id/mobilePieChart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Data Transmitted"
            android:id="@+id/tx_label"
            android:textColor="#372c24"
            android:layout_below="@+id/tx"
            android:layout_alignLeft="@+id/mobilePieChart"
            android:layout_alignStart="@+id/mobilePieChart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Data Received"
            android:textColor="#372c24"
            android:id="@+id/rx_label"
            android:layout_below="@+id/rx"
            android:layout_alignRight="@+id/mobilePieChart"
            android:layout_alignEnd="@+id/mobilePieChart" />


    </RelativeLayout>

</ScrollView>
